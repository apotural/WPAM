<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_gravity="center">


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="70dp"
            android:id="@+id/textType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:id="@+id/textDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="70dp"
            android:id="@+id/textTeacher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/textType2"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:visibility="invisible"
            android:id="@+id/textDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:visibility="invisible"
            android:id="@+id/textTeacher2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorDot1"
            android:textSize="10sp"
            android:textStyle="italic"
            android:gravity="end"
            android:text="obecność" />


        <androidx.cardview.widget.CardView
            android:id="@+id/circle"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:foregroundTint="@color/colorDot1">

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/addition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:tint = "@color/colorPrimaryDark"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_more" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint = "@color/colorPrimaryDark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:src="@drawable/mcv_action_previous" />

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint = "@color/colorPrimaryDark"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mcv_action_next" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>