<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="40dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:background="@null"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/group_item"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/class_type"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorHell"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/aleo"
            android:layout_alignParentLeft="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_list_subdata"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_title"
                android:fontFamily="@font/aleo"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/level"
                android:layout_toLeftOf="@+id/level_body"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aleo"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/level_body"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_title"
                android:id="@+id/time_day"
                android:fontFamily="@font/aleo"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/time_hour"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_title"
                android:fontFamily="@font/aleo"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/time_hour"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_day"
                android:id="@+id/teacher_title"
                android:fontFamily="@font/aleo"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/teacher"
                android:layout_toLeftOf="@+id/teacher_body"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_day"
                android:fontFamily="@font/aleo"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/teacher_body"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
